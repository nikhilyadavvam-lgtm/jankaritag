<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Upload Info | JankariTag</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2 class="mb-4">Provide Info to Your JTag</h2>
    <form action="/qrinfo" method="POST" class="card p-4 shadow-sm">
      
      <!-- Category -->
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select id="category" name="category" class="form-select">
          <option value="VEHICLE">Vehicle</option>
          <option value="WATERTANK">Water Tank</option>
          <option value="OTHERS" selected>Others</option>
        </select>
      </div>

      <!-- Custom ID -->
      <div class="mb-3">
        <label for="customId" class="form-label">Custom ID</label>
        <input type="text" id="customId" name="customId" class="form-control" required>
      </div>

      <!-- Name -->
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" id="name" name="name" class="form-control">
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" id="location" name="location" class="form-control" required>
      </div>

      <!-- Phone -->
      <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input type="text" id="phone" name="phone" class="form-control">
      </div>

      <!-- Info -->
      <div class="mb-3">
        <label for="info" class="form-label">Info</label>
        <textarea id="info" name="info" class="form-control"></textarea>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-primary">Upload</button>
    </form>
  </div>
</body>
</html>